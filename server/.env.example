PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/paramettrus
APP_ENV=development
API_BASE_URL=http://localhost:4000

# Zoho OAuth (use your real values in Railway, do not commit secrets)
ZOHO_CLIENT_ID=YOUR_CLIENT_ID
ZOHO_CLIENT_SECRET=YOUR_CLIENT_SECRET
ZOHO_REFRESH_TOKEN=YOUR_REFRESH_TOKEN
ZOHO_ACCOUNTS_DOMAIN=accounts.zoho.com
ZOHO_API_DOMAIN=https://www.zohoapis.com
ZOHO_CREATOR_OWNER=corretora_paramettrus
ZOHO_CREATOR_APP=paramettrus
ZOHO_CREATOR_REPORT=Contratos_Report
ZOHO_PAGE_LIMIT=500
ZOHO_REQUEST_TIMEOUT_MS=30000

# Optional mapping overrides (defaults in code)
ZOHO_FIELD_CONTRACT_ID=ID
ZOHO_FIELD_CPF_CNPJ=contract_client.client_document
ZOHO_FIELD_SEGURADO_NOME=contract_client.client_name
ZOHO_FIELD_VENDEDOR_ID=Owner.name
ZOHO_FIELD_PRODUTO=contract_product.product_name
ZOHO_FIELD_SEGURADORA=Seguradora.insurance_company_name
ZOHO_FIELD_CIDADE=contract_client.client_address_city
ZOHO_FIELD_DATA_EFETIVACAO=contract_effective_date
ZOHO_FIELD_INICIO=start__validity_date
ZOHO_FIELD_TERMINO=finish__validity_date
ZOHO_FIELD_PREMIO=contract_award
ZOHO_FIELD_COMISSAO_VALOR=contract_commission_amount
ZOHO_FIELD_COMISSAO_PCT=contract_commission_percent
ZOHO_FIELD_STATUS=contract_status

# Ingest & processing controls
ENABLE_SCHEDULER=true
INGEST_CRON=0 * * * *
RENEWAL_GRACE_DAYS=30
DEFAULT_CURVE_ID=curve_default
LOCKED_MONTHS=
ADMIN_TOKEN=change_me
