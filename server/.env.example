PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/paramettrus
APP_ENV=development
API_BASE_URL=http://localhost:4000

# Zoho OAuth (use your real values in Railway, do not commit secrets)
ZOHO_CLIENT_ID=YOUR_CLIENT_ID
ZOHO_CLIENT_SECRET=YOUR_CLIENT_SECRET
ZOHO_REFRESH_TOKEN=YOUR_REFRESH_TOKEN
ZOHO_API_DOMAIN=https://www.zohoapis.com
ZOHO_CREATOR_OWNER=corretora_paramettrus
ZOHO_CREATOR_APP=paramettrus
ZOHO_CREATOR_REPORT=Contratos_Report

# Optional mapping overrides (defaults in code)
ZOHO_FIELD_CONTRACT_ID=contract_id
ZOHO_FIELD_CPF_CNPJ=cpf_cnpj
ZOHO_FIELD_SEGURADO_NOME=segurado_nome
ZOHO_FIELD_VENDEDOR_ID=vendedor_id
ZOHO_FIELD_PRODUTO=produto
ZOHO_FIELD_SEGURADORA=seguradora
ZOHO_FIELD_CIDADE=cidade
ZOHO_FIELD_DATA_EFETIVACAO=data_efetivacao
ZOHO_FIELD_INICIO=inicio
ZOHO_FIELD_TERMINO=termino
ZOHO_FIELD_PREMIO=premio
ZOHO_FIELD_COMISSAO_VALOR=comissao_valor
ZOHO_FIELD_COMISSAO_PCT=comissao_pct

# Ingest & processing controls
ENABLE_SCHEDULER=true
INGEST_CRON=0 * * * *
RENEWAL_GRACE_DAYS=30
DEFAULT_CURVE_ID=curve_default
LOCKED_MONTHS=
